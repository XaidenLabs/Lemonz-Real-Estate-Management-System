{
  "expo": {
    "name": "Lemonz",
    "slug": "lemon",
    "version": "1.0.0",
    "platforms": ["ios", "android", "web"],
    "orientation": "portrait",
    "scheme": "acme",
    "icon": "./assets/common/logo_square.jpg",
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-image-picker",
      "expo-document-picker",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow Lemonz to use your location."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Lemonz to access your camera to scan ID documents."
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "usesCleartextTraffic": true
          }
        }
      ]
    ],
    "android": {
      "package": "com.oftotech.lemonz",
      "permissions": [
        "INTERNET",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/common/logo_square.png",
        "backgroundColor": "#FFFFFF"
      }
    },
    "ios": {
      "bundleIdentifier": "com.oftotech.lemonz",
      "buildNumber": "1.0.0",
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow Lemonz to access your camera to scan ID documents.",
        "NSLocationWhenInUseUsageDescription": "Allow Lemonz to use your location.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Allow Lemonz to use your location."
      }
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "c7e609ae-b1e2-4adf-b25e-776ac6dfd8a4"
      }
    }
  }
}
